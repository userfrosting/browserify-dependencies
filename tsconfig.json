{
    "compilerOptions": {
        "module": "es2015",
        "moduleResolution": "node",
        "lib": [
            "es2015"
        ],
        "allowSyntheticDefaultImports": true,
        "noEmitHelpers": true,
        "declaration": true,
        "target": "es2017",
        "outDir": "./dist/",
        "sourceMap": true,
        "strict": true,
        // TODO Remove once self-referencing supported https://github.com/microsoft/TypeScript/issues/38675
        "baseUrl": "./src/",
        "paths": {
            "@userfrosting/browserify-dependencies": [ "./main" ]
        }
    }
}
